{{name}}{{email}}{{zipcode}}{{cc_number}}{{exp_date}}{{cvv}}

<div class="row">
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-6">
        <p><strong>CUSTOMER INFORMATION</strong></p>

        <p>Name:<br>
        {{ input type="text" value=name }}</p>

        <p>Email:<br>
        {{ input type="text" value=email }}</p>

        <p>Zipcode:<br>
        {{ input type="text" value=zipcode }}</p>
      </div>

      <div class="col-md-6">
        <p><strong>CARD INFORMATION</strong></p>

        <p>Card number:<br>
        {{ input type="text" value=cc_number }}</p>

        <p>Expiration date:<br>
        {{ input type="text" value=exp_date }}</p>

        <p>Security code:<br>
        {{ input type="text" value=cvv }}</p>
      </div>
    </div>
  </div>
</div>

<button class="btn btn-info btn-sm" {{ action "purchase" this }}>Purchase</button>