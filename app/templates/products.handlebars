<div class='row'>
  <div class='col-lg-3'>
    <h4>All Products</h4>
    <ul class='list-unstyled'>
      {{# each }}
        <li>
          {{# link-to "product" this }}
          <img {{ bind-attr src=image }} height="50" width="50">
          {{ name }}
          {{/ link-to }}
        </li><br>
      {{/ each }}
    </ul>
  </div>
  <div class='col-lg-9'>
    {{ outlet }}
  </div>
</div>